---
import type { Requirement } from '../types/requirements';
import { Icon } from 'astro-icon/components';
interface Props extends Requirement {}
const { title, items, icon, color} = Astro.props;
---

<div class={`flex flex-col gap-y-4 bg-white max-w-96 h-auto px-5 py-8 rounded-lg border-t-4 shadow-md`} style={`border-top-color: ${color};`}>
	<div class='flex items-center gap-2'>
        <Icon name={icon} size={24} color={color}  />
		<h3 class="font-semibold text-xl">{title}</h3>
	</div>
	<ul class="flex flex-col gap-4">
		{
			items.map((item) => (
				<li class='flex items-start gap-2 text-[#444D65] text-sm leading-6'>
					<Icon name="ChevronRight" size={16} color={color} class="flex-shrink-0 mt-1 mx-1 "/>
					<span>{item.description}</span>
				</li>
			))
		}
	</ul>
</div>
